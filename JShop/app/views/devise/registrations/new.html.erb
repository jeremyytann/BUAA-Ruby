<div style="min-width: 700px">
  <div class="container d-flex flex-column justify-content-center my-5"
    style="border: 1px solid black; border-radius: 20px; width: 500px;">
    <div style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
      <h2 class="my-4">注册页面</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field d-flex align-items-center mb-4">
          <div class="me-4" style="width: 80px;">
            <%= f.label "用户名", :class => "form-label" %>
          </div>
          <%= f.text_field :username, autofocus: true, :class => "form-control", :style => "width: 250px;" %>
        </div>

        <div class="field d-flex align-items-center mb-4">
          <div class="me-4" style="width: 80px;">
            <%= f.label "手机号", :class => "form-label" %>
          </div>
          
          <%= f.phone_field :phone_number, autofocus: true, :class => "form-control", :style => "width: 250px;" %>
        </div>

        <div class="field d-flex align-items-center mb-4">
          <div class="me-4" style="width: 80px;">
            <%= f.label "邮箱", :class => "form-label" %>
          </div>
          
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :style => "width: 250px;" %>
        </div>

        <div class="field d-flex align-items-center mb-4">
          <div class="me-4" style="width: 80px;">
            <%= f.label "密码", :class => "form-label" %>
          </div>
          
          <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :style => "width: 250px;" %>
        </div>

        <div class="field d-flex align-items-center mb-4">
          <div class="me-4" style="width: 80px;">
            <%= f.label "确认密码", :class => "form-label" %>
          </div>
          
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", :style => "width: 250px;" %>
        </div>

        <div class="field d-flex align-items-center mb-4">
          <div class="me-4" style="width: 80px;">
            <%= f.label "地址", :class => "form-label" %>
          </div>
          
          <%= f.text_field :address, autofocus: true, :class => "form-control", :style => "width: 250px;" %>
        </div>

        <div class="field d-flex justify-content-center align-items-center mb-4">
          <div class="me-4 d-flex align-items-center">
            <%= f.radio_button :role, 1 %> <div class="ms-2">用户</div>
          </div>

          <div class="d-flex align-items-center">
            <%= f.radio_button :role, 2 %> <div class="ms-2">商家</div>
          </div>
        </div>

        <div class="actions d-flex justify-content-center">
          <%= f.submit "提交", :class => "btn btn-dark" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>