<h2 class="ms-5 mt-5">个人资料</h2>

<div class="mx-5" style="min-width: 700px">
  <div class="d-flex flex-column justify-content-center mt-4"
    style="border: 1px solid black; border-radius: 20px;">
    <div class="m-5" style="display: flex; flex-direction: column;">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field d-flex align-items-center mb-4">
    <div class="me-4" style="width: 100px;">
      <p class="form-label"> 用户名 </p>
    </div>

    <p> <%= current_user.username %> </p>
  </div>

  <div class="field d-flex align-items-center mb-4">
    <div class="me-4" style="width: 100px;">
      <p class="form-label"> 邮箱 </p>
    </div>

    <p> <%= current_user.email %> </p>
  </div>

  <div class="field d-flex align-items-center mb-4">
    <div class="me-4" style="width: 100px;">
      <%= f.label "手机号", :class => "form-label" %>
    </div>
    
    <%= f.phone_field :phone_number, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field d-flex align-items-center mb-4">
    <div class="me-4" style="width: 100px;">
      <%= f.label "地址", :class => "form-label" %>
    </div>
    
    <%= f.text_field :address, autofocus: true, :class => "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field d-flex align-items-center mb-4">
    <div class="me-4" style="width: 100px;">
      <%= f.label "当前密码", :class => "form-label" %>
    </div>
    
    <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control" %>
  </div>

  <div class="field d-flex align-items-center mb-4">
    <div class="me-4" style="width: 100px;">
      <%= f.label "新密码", :class => "form-label" %>
    </div>
    
    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
  </div>

  <div class="field d-flex align-items-center mb-4">
    <div class="me-4" style="width: 100px;">
      <%= f.label "确认密码", :class => "form-label" %>
    </div>
    
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "提交", :class => "btn btn-dark" %>
  </div>
<% end %>
    </div>
  </div>
</div>

<h2 class="ms-5 mt-5">注销账户</h2>

<div class="mx-5 mb-5" style="min-width: 700px">
  <div class="d-flex flex-column justify-content-center mt-4"
    style="border: 1px solid black; border-radius: 20px;">
    <div style="display: flex; flex-direction: column;">
      <p class="my-4 ms-5">您对我们的服务感到不满意吗？ <%= button_to "注销我的账户", registration_path(resource_name), data: { confirm: "你确定吗？" }, method: :delete, :class => "btn btn-danger ms-5 mb-3" %></p>
   </div>
  </div>
</div>