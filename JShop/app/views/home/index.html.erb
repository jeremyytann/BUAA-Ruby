<p>Find me in app/views/home/index.html.erb</p>

<% if user_signed_in? %>
    <div>Signed in as  <%= current_user.username %></div>
    <% if current_user.role == 1 %>
        <div>用户</div>
    <% else %>
        <div>商家</div>
    <% end %>
    <%= button_to "登出", destroy_user_session_path, method: :delete  %>
<% else %>
    <%= button_to "登录", new_user_session_path, method: :get  %>
    <%= button_to "注册", new_user_registration_path, method: :get  %>
<% end %>


